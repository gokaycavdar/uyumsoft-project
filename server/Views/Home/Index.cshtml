                            <rect x="310" y="135" width="30" height="25" rx="12" fill="#0891b2"/>
                            
                            <!-- Camlar -->
                            <rect x="170" y="100" width="40" height="25" rx="8" fill="#93c5fd" opacity="0.8"/>
                            <rect x="220" y="100" width="40" height="25" rx="8" fill="#93c5fd" opacity="0.8"/>
                            <rect x="270" y="100" width="40" height="25" rx="8" fill="#93c5fd" opacity="0.8"/>
                            
                            <!-- Tekerlekler -->
                            <circle cx="180" cy="195" r="20" fill="#1f2937"/>
                            <circle cx="180" cy="195" r="12" fill="#374151"/>
                            <circle cx="300" cy="195" r="20" fill="#1f2937"/>
                            <circle cx="300" cy="195" r="12" fill="#374151"/>
                        </g>
                        
                        <!-- Elektrik şimşekleri -->
                        <g class="electric-bolt">
                            <path d="M375 110 L395 105 L385 125 L405 120" stroke="#fbbf24" stroke-width="4" fill="none"/>
                            <path d="M375 130 L400 125 L390 145 L415 140" stroke="#00ff41" stroke-width="4" fill="none"/>
                            <path d="M375 150 L395 145 L385 165 L405 160" stroke="#fbbf24" stroke-width="4" fill="none"/>
                        </g>
                        
                        <!-- Şarj kablosu -->
                        <path d="M340 140 Q320 130 310 150" stroke="#10b981" stroke-width="6" fill="none" stroke-linecap="round"/>
                        
                        <!-- Arka plan efektleri -->
                        <circle cx="100" cy="60" r="15" fill="rgba(6, 182, 212, 0.2)"/>
                        <circle cx="120" cy="55" r="20" fill="rgba(6, 182, 212, 0.2)"/>
                        <circle cx="80" cy="65" r="12" fill="rgba(6, 182, 212, 0.2)"/>
                    </svg>
                </div>
            </div>
        </div>
    </div>
</div>
