                            <circle cx="363" cy="82" r="6" fill="#00ff41"/>
                        </g>
                        
                        <!-- Araç -->
                        <g class="charging-car">
                            <rect x="150" y="120" width="180" height="60" rx="25" fill="#06b6d4"/>
